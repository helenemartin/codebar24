<p id="notice"><%= notice %></p>
<div class="form">
  <h1>Listing Intertitles</h1>
  
  <table>
    <thead>
      <ul>
        <th>Title</th>
        <th>Content</th>
        <th colspan="3"></th>
      </ul>
    </thead>
  
    <tbody>
      <% @intertitles.each do |intertitle| %>
        <tr>
          <td><%= intertitle.title %></td>
          <td><%= intertitle.content %></td>
          <td><%= link_to 'Show', intertitle, :style => "width:100px;border-radius: 0 !important", :class => "btn btn-success" %></td>
          <td><%= link_to 'Edit', edit_intertitle_path(intertitle), :style => "float:right",:class => "btn btn-info"  %></td>
          <td><%= link_to 'Destroy', intertitle, method: :delete, data: { confirm: 'Are you sure?' },:style => "float:right",:class => "btn btn-danger"  %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <br>
  
  <%= link_to 'New Intertitle', new_intertitle_path %>
  <%= link_to 'Sequence', intertitles_show_all_path %>
</div>
